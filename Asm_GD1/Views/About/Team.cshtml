@{
    ViewData["Title"] = "Đội ngũ";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/about.css" />
}

<div class="team-page">
    <div class="container">
        <!-- Page Header -->
        <section class="page-header">
            <h1>Đội ngũ của chúng tôi</h1>
            <p>Những con người tài năng và tận tâm đằng sau thành công của FoodOrder</p>
        </section>

        <!-- Leadership Team -->
        <section class="leadership-section">
            <h2>Ban lãnh đạo</h2>
            <div class="team-grid">
                <div class="team-member">
                    <div class="member-image">
                        <img src="~/Images/ceo.jpg" alt="CEO">
                        <div class="member-overlay">
                            <div class="social-links">
                                <a href="#"><i class="fab fa-linkedin"></i></a>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                                <a href="#"><i class="fas fa-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="member-info">
                        <h3>Đậu Minh Dương</h3>
                        <p class="position">CEO & Founder</p>
                        <p class="description">10+ năm kinh nghiệm trong lĩnh vực công nghệ và F&B. Tốt nghiệp MBA tại Harvard Business School.</p>
                    </div>
                </div>

                <div class="team-member">
                    <div class="member-image">
                        <img src="~/Images/cto.jpg" alt="CTO">
                        <div class="member-overlay">
                            <div class="social-links">
                                <a href="#"><i class="fab fa-linkedin"></i></a>
                                <a href="#"><i class="fab fa-github"></i></a>
                                <a href="#"><i class="fas fa-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="member-info">
                        <h3>Vũ Nguyễn Hưng</h3>
                        <p class="position">CTO</p>
                        <p class="description">Chuyên gia công nghệ với 12 năm kinh nghiệm. Dẫn dắt đội ngũ phát triển hệ thống AI và machine learning.</p>
                    </div>
                </div>

                <div class="team-member">
                    <div class="member-image">
                        <img src="~/Images/admin1.jpg" alt="CMO">
                        <div class="member-overlay">
                            <div class="social-links">
                                <a href="#"><i class="fab fa-linkedin"></i></a>
                                <a href="#"><i class="fab fa-facebook"></i></a>
                                <a href="#"><i class="fas fa-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="member-info">
                        <h3>Kiều Tuấn Khang</h3>
                        <p class="position">CMO</p>
                        <p class="description">8 năm kinh nghiệm marketing digital. Chuyên gia về growth hacking và customer acquisition.</p>
                    </div>
                </div>

                <div class="team-member">
                    <div class="member-image">
                        <img src="~/Images/admin1.jpg" alt="COO">
                        <div class="member-overlay">
                            <div class="social-links">
                                <a href="#"><i class="fab fa-linkedin"></i></a>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                                <a href="#"><i class="fas fa-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="member-info">
                        <h3>Đặng Hà Công Chính</h3>
                        <p class="position">COO</p>
                        <p class="description">Hơn 10 năm kinh nghiệm trong quản lý vận hành và phát triển chiến lược kinh doanh.</p>
                    </div>
                </div>
        </section>

        <!-- Departments -->
        <section class="departments-section">
            <h2>Các phòng ban</h2>
            <div class="departments-grid">
                <div class="department">
                    <div class="dept-icon">
                        <i class="fas fa-code"></i>
                    </div>
                    <h3>Phát triển sản phẩm</h3>
                    <p>15 kỹ sư giàu kinh nghiệm phát triển ứng dụng mobile và web platform.</p>
                </div>

                <div class="department">
                    <div class="dept-icon">
                        <i class="fas fa-bullhorn"></i>
                    </div>
                    <h3>Marketing & PR</h3>
                    <p>10 chuyên gia marketing sáng tạo, xây dựng thương hiệu và kết nối khách hàng.</p>
                </div>

                <div class="department">
                    <div class="dept-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h3>Chăm sóc khách hàng</h3>
                    <p>20 nhân viên hỗ trợ 24/7, đảm bảo trải nghiệm khách hàng tốt nhất.</p>
                </div>

                <div class="department">
                    <div class="dept-icon">
                        <i class="fas fa-truck"></i>
                    </div>
                    <h3>Vận hành & Giao hàng</h3>
                    <p>50+ shipper và 25 nhân viên vận hành, quản lý logistics toàn thành phố.</p>
                </div>
            </div>
        </section>

        <!-- Join Us -->
        <section class="join-us">
            <div class="join-us-content">
                <h2>Tham gia cùng chúng tôi</h2>
                <p>Chúng tôi luôn tìm kiếm những tài năng mới để cùng xây dựng tương lai của ngành F&B</p>
                <div class="join-buttons">
                    <a href="#" class="btn-primary">Xem cơ hội nghề nghiệp</a>
                    <a href="#" class="btn-secondary">Gửi CV tự do</a>
                </div>
            </div>
        </section>
    </div>
</div>
